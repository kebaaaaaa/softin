name: CI - FastAPI File Storage

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  test-and-build:
    runs-on: ubuntu-latest
    name: Run Tests, Load Test, and Build Docker Image

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4


      - name: Set up Python 3.10
        uses: actions/setup-python@v4
        with:
          python-version: 3.10

      - name: Install dependencies
        run: |
          python -m venv venv
          source venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
          pip install pytest locust

      - name: Run Pytest
        run: |
          source venv/bin/activate
          pytest storage/tests -v

      - name: Run Locust Load Test
        run: |
          source venv/bin/activate
          locust --headless -u 5 -r 2 -t 15s -f locustfile.py -H http://localhost:8000

      - name: Build Docker image
        run: |
          docker build -t filestorage:latest .
